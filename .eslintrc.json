{
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "globals": {
        "describe": true,
        "beforeEach": true,
        "context": true,
        "it": true,
        "after": true,
        "before": true,
        "afterEach": true,
        "fetch": true
    },
    "rules": {
        "import/no-extraneous-dependencies": 0,
        "react/jsx-sort-props": [2, {
            "reservedFirst": false
          }],
        "react/forbid-prop-types": 0
    },
    "settings" : {
        "import/resolver": {
            "webpack": {
                "config": "webpack.config.js"
            }
        }
    }
}