{
	"appId": "com.adarsh.dockstation",
	"productName": "Dock Station",
	"asar": true,
	"directories": {
		"buildResources": "assets/",
		"output": "build/",
		"app": "./src/app"
	},
	"files": [
    "dist/**/*"
	],
	"dmg": {
		"contents": [
			{
				"type": "link",
				"path": "/Applications",
				"x": 410,
				"y": 150
			},
			{
				"type": "file",
				"x": 130,
				"y": 150
			}
		]
  },
  "deb": {
    "maintainer": "Adarsh"
  },
	"mac": {
		"target": "dmg",
		"category": "public.app-category.tools"
	},
	"win": {
		"target": "nsis"
	},
	"linux": {
		"target": [
      "deb",
      "apk",
      "tar.gz"
		]
	}
}